@model IEnumerable<Asgard.Models.User>



<h3>Lista de clientes</h3>
@{
    ViewBag.Title = "Index";
    WebGrid grid = new WebGrid(Model);
}
<link href="~/Content/Estilogrid.css" rel="stylesheet" />
@grid.GetHtml(
    fillEmptyRows: true,
    tableStyle: "webgrid-table",
    headerStyle: "webgrid-header",
    footerStyle: "webgrid-footer",
    alternatingRowStyle: "webgrid-alternating-row",
    rowStyle: "webgrid-row-style",
    mode: WebGridPagerModes.All,

columns: new[]
{
grid.Column("DNI",header:"Codigo"),
grid.Column("Name",header:"Nombre"),
grid.Column("LastName",header:"Apellido"),
grid.Column("Email",header:"Correo"),
grid.Column("Country",header:"Nacionalidad"),
grid.Column("",
header: "Acciones",
format:
@<text>
    @Html.ActionLink("Ver Pedidos",   "VerPedidos",   new { id=item.DNI} )
</text>
    )

                         })







